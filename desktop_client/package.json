{
  "name": "baja-telemetry-client",
  "version": "1.0.0",
  "description": "Baja SAE telemetry client for LoRa GPS tracking and lap timing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "adjust-race-timer": "node race_timer_cli.js"
  },
  "keywords": ["baja", "telemetry", "lora", "gps", "lap-timing"],
  "author": "Baja Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "serialport": "^12.0.0",
    "@serialport/parser-readline": "^12.0.0",
    "leaflet": "^1.9.4",
    "jsdom": "^24.0.0"
  },
  "build": {
    "appId": "com.bajateam.telemetry",
    "productName": "Baja Telemetry",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "App_Icon.icns",
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    }
  }
}
